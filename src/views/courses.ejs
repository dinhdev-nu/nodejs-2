<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/styles.css">

    <style>
        .card {
           margin-top: 30px;
           box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
           transition: 0.3s;
           width: 20%;
            margin: 30px 10px 0 10px;
           }
   
           .card:hover {
           box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
           }
   
           .container {
           padding: 2px 16px;
           }   
       </style>
</head>
<body>
    <ul>
        <li><a  href="/">Home</a></li>
        <li><a href="/courses" class="active">Courses</a></li>
        <li><a href="#contact">Contact</a></li>
        <li><a href="#about">About</a></li>
      </ul>
      <div style="display: flex;">
        <% courses.forEach(function(course){ %>
            <div style="position: relative; padding-bottom: 15px;" class="card">
                <img  src="<%= course.image%>"  alt="./images/anh1.gif" style="width:100%; height: 200px;">
                <div class="container">
                  <h4><b><%= course.name%></b></h4>
                  <p><%= course.description %></p>
                  <div style="display: flex;position:absolute; bottom: 10px;">
                    <button id="<%= course._id%>" class="edit"><a href="/courses/edit/<%= course._id%>">Edit</a></button><button class="delete">Delete</button>
                  </div>
                </div>
              </div>
          <% }); %>
      </div>

      <script>

      </script>
</body>
</html>