<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/styles.css">

    <style>
        .card {
           margin-top: 30px;
           box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
           transition: 0.3s;
           width: 20%;
            margin: 30px 10px 0 10px;
           }
   
           .card:hover {
           box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
           }
   
           .container {
           padding: 2px 16px;
           }  
          
       </style>
</head>
<body>
    <ul>
        <li><a  href="/">Home</a></li>
        <li><a href="/courses" class="active">Courses</a></li>
        <li><a href="#contact">Contact</a></li>
        <li><a href="#about">About</a></li>
      </ul>
      <div style="display: flex;">
        <% courses.forEach(function(course){ %>
            <div style="position: relative; padding-bottom: 15px;" class="card">
                <img  src="<%= course.image%>"  alt="./images/anh1.gif" style="width:100%; height: 200px;">
                <div class="container">
                  <h4><b><%= course.name%></b></h4>
                  <p><%= course.description %></p>
                  <div style="display: flex;position:absolute; bottom: 10px;">
                    <button  class="edit"><a href="/courses/edit/<%= course._id%>">Edit</a></button>
                    <button id="<%= course._id%>" class="delete"><a href="/courses/delete/<%= course._id%>">Delete</a></button>
                  </div>
                </div>
              </div>
          <% }); %>
      </div>


      <div style="display: none;" id="form-comfirm">
        <form id="formdelete" action="delete">
            <h1>Xóa KHÓA HỌC: </h1>
            <p>Bạn có muốn xóa khóa học này chư</p>
            <button>YES</button>
            <button>No</button>
        </form>
      </div>
</body>
</html>